# FastAPI Configuration
FAST_API_HOST=0.0.0.0
FAST_API_PORT=8000
DEBUG=True
ENVIRONMENT=development

# Database Configuration (Local SQLite for testing)
DATABASE_URL=sqlite:///./test.db

# Feishu Configuration (Optional for testing)
FEISHU_APP_ID=test-app-id
FEISHU_APP_SECRET=test-app-secret
FEISHU_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/

# Content Crawler Configuration
CRAWLER_TIMEOUT=30
CRAWLER_RETRIES=3
PROXY_LIST=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Keys and Secrets
JWT_SECRET_KEY=test-secret-key-do-not-use-in-production
API_KEY=test-api-key-do-not-use-in-production

# Redis (Optional for caching)
REDIS_URL=redis://localhost:6379/0

# NLP and ML Configuration
NLP_MODEL=bert-base-chinese
MODEL_CACHE_DIR=/tmp/models

# Recommendation Engine Parameters
REC_MIN_SCORE=0.5
REC_TOP_K=10
COLLAB_THRESHOLD=0.1

# Feature Flags
ENABLE_NOTIFICATIONS=True
ENABLE_ANALYTICS=True
ENABLE_CACHING=False
