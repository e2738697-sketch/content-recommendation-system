# FastAPI Configuration
FAST_API_HOST=0.0.0.0
FAST_API_PORT=8000
DEBUG=True
ENVIRONMENT=development

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-api-key
DATABASE_URL=postgresql://user:password@host:5432/database

# Feishu Configuration
FEISHU_APP_ID=your-feishu-app-id
FEISHU_APP_SECRET=your-feishu-app-secret
FEISHU_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/

# Content Crawler Configuration
CRAWLER_XIAOHONGSHU_API=https://edith.xiaohongshu.com/fe_api/biz/feed
CRAWLER_DOUYIN_API=https://www.douyin.com/api/v1/search
CRAWLER_TIMEOUT=30
CRAWLER_RETRIES=3
PROXY_LIST=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Keys and Secrets
JWT_SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# NLP and ML Configuration
NLP_MODEL=bert-base-chinese
MODEL_CACHE_DIR=/tmp/models

# Recommendation Engine Parameters
REC_MIN_SCORE=0.5
REC_TOP_K=10
COLLAB_THRESHOLD=0.1

# Feature Flags
ENABLE_NOTIFICATIONS=True
ENABLE_ANALYTICS=True
ENABLE_CACHING=True
